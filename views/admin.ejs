<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Dashboard</title>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
/* ================= ROOT THEME ================= */
:root {
    --bg-main: #0b0d12;
    --bg-card: rgba(255, 255, 255, 0.06);
    --accent: #ff8c1a;
    --accent-soft: rgba(255, 140, 26, 0.25);
    --text-main: #f5f5f5;
    --text-muted: #aaa;
}

/* ================= BACKGROUND ANIMATION ================= */
body {
    margin: 0;
    padding: 30px;
    font-family: 'Segoe UI', sans-serif;
    background: radial-gradient(circle at 20% 20%, #1a0f05, #0b0d12 60%);
    color: var(--text-main);
    overflow-x: hidden;
}

/* Moving glow */
body::before {
    content: "";
    position: fixed;
    inset: -50%;
    background: radial-gradient(circle, rgba(255,140,26,0.15), transparent 60%);
    animation: glowMove 20s linear infinite;
    z-index: 0;
}

@keyframes glowMove {
    0% { transform: translate(0,0); }
    50% { transform: translate(30%, 20%); }
    100% { transform: translate(0,0); }
}

/* Floating particles */
.particles span {
    position: fixed;
    width: 3px;
    height: 3px;
    background: var(--accent);
    box-shadow: 0 0 10px var(--accent);
    border-radius: 50%;
    animation: floatUp linear infinite;
    opacity: 0.4;
}

@keyframes floatUp {
    from { transform: translateY(110vh); opacity: 0; }
    20% { opacity: 0.5; }
    to { transform: translateY(-10vh); opacity: 0; }
}

/* ================= LAYOUT ================= */
body > * { position: relative; z-index: 1; }

h1 {
    text-align: center;
    font-size: 3rem;
    margin-bottom: 25px;
    color: var(--accent);
    letter-spacing: 1px;
    animation: fadeDown 0.8s ease;
}

@keyframes fadeDown {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
}

.top-bar {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 25px;
    animation: fadeUp 0.8s ease;
}

@keyframes fadeUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}

/* ================= CARD ================= */
.card {
    background: var(--bg-card);
    backdrop-filter: blur(14px);
    border-radius: 18px;
    padding: 22px;
    margin-bottom: 25px;
    border: 1px solid rgba(255,255,255,0.08);
    box-shadow: 0 20px 40px rgba(0,0,0,0.5);
    transition: 0.4s;
    animation: scaleIn 0.7s ease;
}

@keyframes scaleIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
}

.card:hover {
    transform: translateY(-6px);
    box-shadow: 0 25px 60px rgba(255,140,26,0.25);
}

/* ================= STATS ================= */
.stats {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}

.stats p {
    font-size: 36px;
    font-weight: bold;
    color: var(--accent);
}

/* ================= BUTTONS ================= */
button {
    border: none;
    border-radius: 30px;
    padding: 10px 20px;
    font-size: 14px;
    cursor: pointer;
    color: #000;
    background: linear-gradient(135deg, #ff8c1a, #ffb347);
    transition: 0.3s;
    box-shadow: 0 5px 20px rgba(255,140,26,0.4);
}

button:hover {
    transform: scale(1.1);
}

.delete-btn {
    background: linear-gradient(135deg, #ff3d3d, #ff7a7a);
}

/* ================= TABLE ================= */
table {
    width: 100%;
    border-collapse: collapse;
}

th, td {
    padding: 12px;
    text-align: left;
}

th {
    color: var(--accent);
    border-bottom: 1px solid rgba(255,255,255,0.1);
}

tr {
    transition: 0.3s;
}

tr:hover {
    background: rgba(255,140,26,0.1);
}

/* ================= CHART ================= */
.chart-container {
    height: 380px;
}

/* ================= NO USERS ================= */
.no-users {
    text-align: center;
    color: var(--text-muted);
}
</style>
</head>

<!-- SAFE DATA -->
<body data-totalviews="<%= totalViews %>">

<!-- PARTICLES -->
<div class="particles">
    <span style="left:10%;animation-duration:14s"></span>
    <span style="left:30%;animation-duration:18s"></span>
    <span style="left:50%;animation-duration:16s"></span>
    <span style="left:70%;animation-duration:20s"></span>
    <span style="left:90%;animation-duration:22s"></span>
</div>

<h1>Admin Dashboard</h1>

<div class="top-bar">
    <button onclick="exportToExcel()">ðŸ“¥ Export</button>
</div>

<div class="card stats">
    <div>
        <h3>Total Website Visits</h3>
        <p><%= totalViews %></p>
    </div>
    <form action="/admin/reset-visits" method="POST"
          onsubmit="return confirm('Reset visit count?');">
        <button>Reset</button>
    </form>
</div>

<div class="card chart-container">
    <canvas id="visitChart"></canvas>
</div>

<div class="card">
<% if (users && users.length > 0) { %>
<table id="messagesTable">
<thead>
<tr>
<th>Name</th><th>Email</th><th>Message</th><th>Date</th><th>Action</th>
</tr>
</thead>
<tbody>
<% users.forEach(user => { %>
<tr>
<td><%= user.name %></td>
<td><%= user.email %></td>
<td><%= user.message %></td>
<td><%= new Date(user.createdAt).toLocaleString() %></td>
<td>
<form action="/admin/delete/<%= user._id %>" method="POST">
<button class="delete-btn">Delete</button>
</form>
</td>
</tr>
<% }) %>
</tbody>
</table>
<% } else { %>
<p class="no-users">No messages found</p>
<% } %>
</div>

<script>
const TOTAL_VIEWS = Number(document.body.dataset.totalviews);

// Create a simple chart showing total visits vs a baseline
new Chart(document.getElementById('visitChart'), {
    type: 'doughnut',
    data: {
        labels: ['Total Visits', 'Remaining Goal'],
        datasets: [{
            data: [TOTAL_VIEWS, Math.max(0, 1000 - TOTAL_VIEWS)], // Goal of 1000 visits
            backgroundColor: ['#ff8c1a', 'rgba(255,255,255,0.1)'],
            borderColor: ['#ff8c1a', 'rgba(255,255,255,0.2)'],
            borderWidth: 2
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: { 
                labels: { color: '#aaa' },
                position: 'bottom'
            },
            tooltip: {
                callbacks: {
                    label: function(context) {
                        if (context.label === 'Total Visits') {
                            return `Total Visits: ${TOTAL_VIEWS}`;
                        } else {
                            return `Goal Remaining: ${Math.max(0, 1000 - TOTAL_VIEWS)}`;
                        }
                    }
                }
            }
        }
    }
});

function exportToExcel() {
    const table = document.getElementById("messagesTable");
    if (!table) {
        alert("No data to export");
        return;
    }
    let csv = [];
    for (let row of table.rows) {
        let cols = Array.from(row.cells).slice(0,4).map(c => `"${c.innerText}"`);
        csv.push(cols.join(","));
    }
    const blob = new Blob([csv.join("\n")], { type: "text/csv" });
    const a = document.createElement("a");
    a.href = URL.createObjectURL(blob);
    a.download = "messages.csv";
    a.click();
}
</script>

</body>
</html>
